        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Description>Endpoint da aplicação.</Description>
    </PropertyGroup>

    <ItemGroup Label="Padrão da linguagem">
        <Using Include="System" />
