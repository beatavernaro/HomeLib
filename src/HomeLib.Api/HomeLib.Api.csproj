        <Using Include="System.Collections.Generic" />
        <Using Include="Microsoft.AspNetCore.Mvc" />
        <Using Include="System.Threading.Tasks;" />
        <Using Include="Microsoft.Extensions.Logging" />
        <Using Include="System.Net.Mime" />
    </ItemGroup>
    
    <ItemGroup Label="HomeLib">
        <Using Include="HomeLib.Application.Services" />
        <Using Include="HomeLib.Domain.Entidades" />
      <ProjectReference Include="..\HomeLib.Application\HomeLib.Application.csproj" />
    </ItemGroup>

    <ItemGroup Label="Pagotes Nuget">
        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.2.3" />
        <PackageReference Include="Swashbuckle.AspNetCore.Annotations" Version="6.5.0" />
    </ItemGroup>

</Project>
